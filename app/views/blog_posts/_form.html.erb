<%= form_with model: @blog_post, html: { class: "flex flex-col gap-4 w-full max-w-[35vw]" } do |form| %>
  <div class="field flex flex-col gap-4">
    <%= form.label :title, class: "font-medium" %>
    <%= form.text_field :title, class: "w-full bg-zinc-900 border rounded-lg text-zinc-100 focus:border-purple-500 focus:ring-0 transition" %>
  </div>
  <div>
    <% if form.object.errors[:title].any? %>
      <ul>
        <% form.object.errors[:title].each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    <% end %>
  </div>
  <div class="field flex flex-col gap-4">
    <%= form.label :body %>
    <%= form.text_area :body,  class: "w-full bg-zinc-900 border rounded-lg text-zinc-100 focus:border-purple-500 focus:ring-0 transition" %>
  </div>
  <div>
    <% if form.object.errors[:body].any? %>
      <ul>
        <% form.object.errors[:body].each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    <% end %>
  </div>
  <div class="actions">
    <%= form.button class: "p-3 bg-zinc-500 text-sm text-zinc-100 rounded-lg hover:bg-violet-500 transition" %>
  </div>
<% end %>
