<%= form_with model: @blog_post, html: { class: "form" } do |form| %>
  <div class="field">
    <%= form.label :title, class: "input-label" %>
    <%= form.text_field :title, class: "input" %>
  </div>
  <div>
    <% if form.object.errors[:title].any? %>
      <ul>
        <% form.object.errors[:title].each do |message| %>
          <li class="error-message"><%= message %></li>
        <% end %>
      </ul>
    <% end %>
  </div>
  <div class="field">
    <%= form.label :body, class: "input-label" %>
    <%= form.text_area :body,  class: "input" %>
  </div>
  <div>
    <% if form.object.errors[:body].any? %>
      <ul>
        <% form.object.errors[:body].each do |message| %>
          <li class="error-message"><%= message %></li>
        <% end %>
      </ul>
    <% end %>
  </div>
  <div class="actions">
    <%= form.button class: "btn-secondary mt-3" %>
  </div>
<% end %>
