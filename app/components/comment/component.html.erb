<article class="comment">
  <div class="flex gap-3 items-center">
    <div class="flex items-center gap-2">
      <span class="avatar"></span>
      <p class="text-sm"><%= comment.user.email %></p>
    </div>
    <span class="dot-divider mt-1"></span>
    <p class="text-sm"><%= time_ago_in_words(comment.created_at) %> ago</p>

    <div class="flex gap-4 items-center ml-auto">
      <% if author? %>
        <%= link_to"edit", edit_blog_post_comment_path(comment.blog_post, comment), class: "text-violet-500" %>
        <%= button_to "delete", [comment.blog_post, comment], method: :delete, data: { turbo_confirm: "Are you sure you want to delete this comment?" }, class: "text-red-500" %>
      <% end %>

      <% if author_of_post? %>
      <span class="badge">
        Author of post
      </span>
      <% end %>
      </div>
  </div>
  <p><%= comment.content %></p>
</article>