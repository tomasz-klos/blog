  <%= render(Common::Dropdown::Component.new(position: 'left')) do |c| %>
  <% c.with_button %>
  <% if record.instance_of?(Comment) %>
    <%= link_to("edit", edit_comment_path(record), class: "menu-item") %>
    <%= button_to("delete", record, method: :delete, data: { turbo_confirm: "Are you sure you want to delete this comment?" }, form_class: "w-full", class: "menu-item") %>
  <% elsif record.iynstance_of?(Reply) %>
    <%= link_to("edit", edit_comment_reply_path(record.comment, record), class: "menu-item") %>
    <%= button_to("delete", comment_reply_path(record.comment, record), method: :delete, data: { turbo_confirm: "Are you sure you want to delete this comment?" }, form_class: "w-full", class: "menu-item") %>
  <% end %>
<% end %>