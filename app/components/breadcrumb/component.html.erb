<nav aria-label="breadcrumb" class="flex <%= class_name %>">
  <ul class="flex items-center gap-2 bg-zinc-800 rounded-lg p-1 max-w-max">
    <% items.each do |item| %>
      <li class="flex items-center">
        <% if item[:url].present? %>
          <%= link_to(item[:title], item[:url], class: "text-sm font-medium text-zinc-100 px-3 py-1 rounded-md transition hover:text-zinc-300") %>
          <span aria-hidden="true">
            <%= icon("chevron-right", class_name: "w-4 h-4", title: "Next", variant: :outline) %>
          </span>
        <% else %>
          <p class="bg-zinc-900 text-sm font-medium text-zinc-100 px-3 py-1 rounded-md">
            <%= item[:title] %>
          </p>
        <% end %>
      </li>
    <% end %>
  </ul>
</nav>