<h2>Forgot your password?</h2>
<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |form| %>
  <div class="field">
    <%= form.label(:email) %><br />
    <%= form.email_field(:email, autofocus: true, autocomplete: "email") %>
    <%= render(Common::ErrorMessages::Component.new(form: form, field: :email)) %>
  </div>
  <div class="actions">
    <%= form.submit("Send me reset password instructions") %>
  </div>
<% end %>
<%= render(partial: "devise/shared/links") %>
