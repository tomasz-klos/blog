<div
  class="flex w-fit"
  data-controller="custom-dropdown"
  data-action="click->custom-dropdown#toggle click@window->custom-dropdown#hide"
  >
  <div id="dropdown-button" class="relative flex justify-center">
    <%= button %>
    <%= content_tag(
      :div,
      "",
      class: "hidden absolute top-12 z-10 flex w-screen max-w-max #{menu_position} #{menu_class}",
      data: {
        "custom-dropdown-target": "menu",
        "transition-enter": "transition ease-out duration-200",
        "transition-enter-from": "opacity-0 translate-y-1",
        "transition-enter-to": "opacity-100 translate-y-0",
        "transition-leave": "transition ease-in duration-150",
        "transition-leave-from": "opacity-100 translate-y-0",
        "transition-leave-to": "opacity-0 translate-y-1"
      },
      id: id
    ) do %>
      <div class="flex flex-col gap-1 w-full text-sm bg-zinc-800 shadow-lg rounded-lg border border-zinc-700 py-1">
        <%= content %>
      </div>
    <% end %>
  </div>
</div>