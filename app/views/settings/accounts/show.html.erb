<section class="col-start-4 col-span-7 flex flex-col gap-12 w-full">
  <div class="flex items-start justify-between">
    <hgroup class="flex flex-col gap-2">
      <h1 class="text-2xl font-medium">Your account</h1>
      <p class="text-sm">Manage your account here.</p>
    </hgroup>
  </div>
  <div class="flex flex-col gap-2">
    <p class="text-lg font-medium">Delete your account</p>
    <p class="text-sm">Once you delete your account, there is no going back. Please be certain.</p>
    <%= button_to(
        "Delete account",
        settings_account_path,
        method: :delete,
        form: {
          data: { 
            turbo_confirm: "Are you sure you want to delete your account?",
            turbo_confirm_message: "Once you delete your account, there is no going back. Please be certain.",
            turbo_confirm_type: "delete"
          }
        },
        class: "btn-danger btn-md mt-4"
      ) %>
  </div>
</section>