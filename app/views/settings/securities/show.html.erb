<section class="col-start-4 col-span-7 flex flex-col gap-12 w-full">
  <div class="flex items-start justify-between">
    <hgroup class="flex flex-col gap-2">
      <h1 class="text-2xl font-medium">Your security</h1>
      <p class="text-sm">Manage your security settings here.</p>
    </hgroup>
  </div>
  <div class="flex flex-col gap-2">
    <p class="text-lg font-medium">Change your password</p>
    <p class="text-sm">Ensure your account is secure by changing your password regularly.</p>
    <%= form_with(
      model: current_user,
      url: settings_security_path,
      method: :patch,
      class: "flex flex-col gap-4",
      data: { turbo: "false" }
    ) do |f| %>
      <div class="flex flex-col gap-2">
        <%= f.label(:current_password, class: "input-label") %>
        <%= f.password_field(:current_password, class: "input") %>
        <%= render(Common::ErrorMessages::Component.new(form: f, field: :current_password)) %>
      </div>
      <div class="flex flex-col gap-2">
        <%= f.label(:password, class: "input-label") %>
        <%= f.password_field(:password, class: "input") %>
        <%= render(Common::ErrorMessages::Component.new(form: f, field: :password)) %>
      </div>
      <div class="flex flex-col gap-2">
        <%= f.label(:password_confirmation, class: "input-label") %>
        <%= f.password_field(:password_confirmation, class: "input") %>
        <%= render(Common::ErrorMessages::Component.new(form: f, field: :password_confirmation)) %>
      </div>
      <div class="flex items-center gap-4">
        <%= f.button("Update password", class: "btn-primary btn-md") %>
      </div>
    <% end %>
  </div>
</section>