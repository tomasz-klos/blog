<article class="comment">
  <div class="flex gap-3 items-center">
    <div class="flex items-center gap-2">
      <span class="avatar"></span>
      <p class="text-sm"><%= comment.user.email %></p>
    </div>
    <span class="dot-divider mt-1"></span>
    <p class="text-sm"><%= time_ago_in_words(comment.created_at) %> ago</p>
    <div class="flex gap-4 items-center ml-auto">
      <% if author? %>
        <%= render(Common::Dropdown::Component.new(position: 'left')) do |c| %>
          <% c.with_button %>
          <%= link_to"edit", edit_comment_path(comment), class: "text-violet-500 menu-item" %>
          <%= button_to "delete", comment, method: :delete, data: { turbo_confirm: "Are you sure you want to delete this comment?" }, form_class: "w-full", class: "text-red-500 menu-item" %>
        <% end %>
      <% end %>
      <% if author_of_post? %>
        <span class="badge">
          Author of post
        </span>
      <% end %>
    </div>
  </div>
  <%= render(partial: 'comments/content', locals: { comment: comment }) %>
  <div class="flex items-center gap-2">
    <%= render(Common::Likes::Component.new(current_user: current_user, target: comment, likes: comment.likes, path: toggle_like_comment_path(comment))) %>
  </div>
  <%= render(Comment::Replies::Component.new(comment: comment, replies: comment.replies, current_user: current_user)) %>
</article>